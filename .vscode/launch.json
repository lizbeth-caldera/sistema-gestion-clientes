{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask: Debug",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/backend/app.py",
      "env": { "FLASK_APP": "app.py", "FLASK_ENV": "development" },
      "cwd": "${workspaceFolder}/backend",
      "justMyCode": true
    },
    {
      "name": "Angular: Serve",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:4200",
      "webRoot": "${workspaceFolder}/frontend/clientes-app"
    }
  ]
}
